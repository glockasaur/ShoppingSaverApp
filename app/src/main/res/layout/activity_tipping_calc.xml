<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TippingCalc">
    android:background="@drawable/cashmoney">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Total:"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/finalTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="number|numberDecimal"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textStyle="normal|italic"
        tools:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finalTotal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"
        android:text="Percentage to tip:"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/tipButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipPercentage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="#E1C2F1"
        android:text="How much do I tip?"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/showTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="78dp"
        android:fontFamily="serif"
        android:text="-----------"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tipButton"
        android:layout_alignParentEnd="true"
        android:text="%"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="normal|italic" />

    <EditText
        android:id="@+id/tipPercentage"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toStartOf="@+id/textView"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/finalTotal"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/finalTotal"
        android:paddingTop="5dp"
        android:text="$"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

</RelativeLayout>